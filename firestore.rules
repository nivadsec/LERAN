/**
 * @fileoverview Firestore Security Rules for iTalk Academic platform.
 *
 * Core Philosophy:
 * This ruleset enforces a strict user-ownership model for all data. Each user has a dedicated data tree under `/users/{userId}`, and only the authenticated user can access their own data.
 *
 * Data Structure:
 * All data is nested under /users/{userId}, including self-assessments, academic plans, and progress records. This structure enables path-based authorization.
 *
 * Key Security Decisions:
 * - Users can only access their own data.
 * - Data validation is limited to ensuring relational integrity and authorization consistency.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Enforces user-ownership for user profiles.
     * @path /users/{userId}
     * @allow (create) - Authenticated user creates their profile with matching UID.
     * @allow (get, update, delete) - Authenticated user accesses their own profile.
     * @deny (create) - Unauthenticated user attempts to create a profile.
     * @deny (get, update, delete) - Authenticated user attempts to access another user's profile.
     * @principle Enforces document ownership for all operations.
     */
    match /users/{userId} {
      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
      }

      allow get: if isOwner(userId);
      allow list: if false;
      allow create: if isOwner(userId) && request.resource.data.id == request.auth.uid;
      allow update: if isExistingOwner(userId) && request.resource.data.id == resource.data.id;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Enforces user-ownership for self-assessments.
     * @path /users/{userId}/selfAssessments/{selfAssessmentId}
     * @allow (create) - Authenticated user creates a self-assessment under their profile.
     * @allow (get, list, update, delete) - Authenticated user accesses their own self-assessments.
     * @deny (create) - Unauthenticated user attempts to create a self-assessment.
     * @deny (get, list, update, delete) - Authenticated user attempts to access another user's self-assessments.
     * @principle Restricts access to a user's own data tree.
     */
    match /users/{userId}/selfAssessments/{selfAssessmentId} {
      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
      }
      
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId) && request.resource.data.userId == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.userId == resource.data.userId;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Enforces user-ownership for academic plans.
     * @path /users/{userId}/academicPlans/{academicPlanId}
     * @allow (create) - Authenticated user creates an academic plan under their profile.
     * @allow (get, list, update, delete) - Authenticated user accesses their own academic plans.
     * @deny (create) - Unauthenticated user attempts to create an academic plan.
     * @deny (get, list, update, delete) - Authenticated user attempts to access another user's academic plans.
     * @principle Restricts access to a user's own data tree.
     */
    match /users/{userId}/academicPlans/{academicPlanId} {
      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
      }
      
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId) && request.resource.data.userId == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.userId == resource.data.userId;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Enforces user-ownership for progress records.
     * @path /users/{userId}/academicPlans/{academicPlanId}/progressRecords/{progressRecordId}
     * @allow (create) - Authenticated user creates a progress record under their academic plan.
     * @allow (get, list, update, delete) - Authenticated user accesses their own progress records.
     * @deny (create) - Unauthenticated user attempts to create a progress record.
     * @deny (get, list, update, delete) - Authenticated user attempts to access another user's progress records.
     * @principle Restricts access to a user's own data tree.
     */
    match /users/{userId}/academicPlans/{academicPlanId}/progressRecords/{progressRecordId} {
      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
      }

      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId) && get(/databases/$(database)/documents/users/$(userId)/academicPlans/$(academicPlanId)).data.userId == userId && request.resource.data.academicPlanId == academicPlanId;
      allow update: if isExistingOwner(userId) && get(/databases/$(database)/documents/users/$(userId)/academicPlans/$(academicPlanId)).data.userId == userId && request.resource.data.academicPlanId == resource.data.academicPlanId;
      allow delete: if isExistingOwner(userId);
    }
  }
}