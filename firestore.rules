/**
 * @fileoverview Firestore Security Rules for the iTalk Academic platform.
 *
 * Core Philosophy:
 * This ruleset enforces a strict user-ownership model for student data,
 * ensuring that students can only access their own information. Teachers and
 * admins might have broader read access in the future, but this is not yet
 * implemented. Public data (announcements) is segregated into a separate
 * collection.
 *
 * Data Structure:
 * - /users/{userId}: Student profiles.
 * - /users/{userId}/dailyReports/{reportId}: Daily reports for each student.
 * - /users/{userId}/testAnalyses/{analysisId}: Test analysis data for students.
 * - /users/{userId}/examAnalyses/{analysisId}: Exam analysis data for students.
 * - /users/{userId}/focusSessions/{sessionId}: Focus session ratings.
 * - /users/{userId}/studyTopics/{topicId}: Spaced repetition study topics.
 * - /classes/{classId}: Class information (limited access).
 * - /teachers/{teacherId}: Teacher profiles (limited access).
 * - /users/{userId}/smartAlerts/{alertId}: Smart alerts for students.
 * - /announcements/{announcementId}: General announcements (public read).
 *
 * Key Security Decisions:
 * - Students can only read/write their own data within their /users/{userId}
 *   path.
 * - Teachers and admins do not yet have elevated privileges.
 * - User listing is explicitly denied to prevent data scraping.
 * - Schema validation is relaxed for rapid prototyping but MUST be
 *   implemented later.
 * - Public read access is granted to the /announcements collection.
 *
 * Denormalization for Authorization:
 *  - The rules rely on path-based authorization (/users/{userId}) to avoid
 *    costly `get()` operations.  Each document is implicitly owned by the
 *    `userId` in the path.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Checks if the request is made by an authenticated user.
     * @returns {boolean} True if the user is signed in, false otherwise.
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * @description Checks if the authenticated user's UID matches the provided userId.
     * @param {string} userId - The user ID to compare against the authenticated user's UID.
     * @returns {boolean} True if the UIDs match, false otherwise.
     */
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    /**
     * @description Checks if the authenticated user owns the existing document.
     * @param {string} userId - The user ID to compare against the authenticated user's UID.
     * @returns {boolean} True if the UIDs match and the resource exists, false otherwise.
     */
    function isExistingOwner(userId) {
      return isOwner(userId) && resource != null;
    }

    /**
     * @description Rule for the /users/{userId} collection.
     * @path /users/{userId}
     * @allow (create) - A user can create their own profile if the userId matches their auth UID.
     * @allow (get, list, update, delete) - A user can get, list, update, or delete their own profile if the userId matches their auth UID.
     * @deny (create) - A user cannot create a profile with a userId that doesn't match their auth UID.
     * @deny (get, list, update, delete) - A user cannot get, list, update, or delete another user's profile.
     * @principle Enforces document ownership for all operations.
     */
    match /users/{userId} {
      allow get: if isOwner(userId);
      allow list: if false; // Listing all users is denied.

      allow create: if isOwner(userId) && request.resource.data.id == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.id == resource.data.id;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Rule for the /users/{userId}/dailyReports/{reportId} collection.
     * @path /users/{userId}/dailyReports/{reportId}
     * @allow (create) - A user can create a daily report under their own profile.
     * @allow (get, list, update, delete) - A user can get, list, update, or delete their own daily reports.
     * @deny (create) - A user cannot create a daily report under another user's profile.
     * @deny (get, list, update, delete) - A user cannot get, list, update, or delete another user's daily reports.
     * @principle Enforces document ownership for all operations.
     */
    match /users/{userId}/dailyReports/{reportId} {
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);

      allow create: if isOwner(userId) && request.resource.data.studentId == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.studentId == resource.data.studentId;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Rule for the /users/{userId}/testAnalyses/{analysisId} collection.
     * @path /users/{userId}/testAnalyses/{analysisId}
     * @allow (create) - A user can create a test analysis under their own profile.
     * @allow (get, list, update, delete) - A user can get, list, update, or delete their own test analyses.
     * @deny (create) - A user cannot create a test analysis under another user's profile.
     * @deny (get, list, update, delete) - A user cannot get, list, update, or delete another user's test analyses.
     * @principle Enforces document ownership for all operations.
     */
    match /users/{userId}/testAnalyses/{analysisId} {
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);

      allow create: if isOwner(userId) && request.resource.data.studentId == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.studentId == resource.data.studentId;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Rule for the /users/{userId}/examAnalyses/{analysisId} collection.
     * @path /users/{userId}/examAnalyses/{analysisId}
     * @allow (create) - A user can create an exam analysis under their own profile.
     * @allow (get, list, update, delete) - A user can get, list, update, or delete their own exam analyses.
     * @deny (create) - A user cannot create an exam analysis under another user's profile.
     * @deny (get, list, update, delete) - A user cannot get, list, update, or delete another user's exam analyses.
     * @principle Enforces document ownership for all operations.
     */
    match /users/{userId}/examAnalyses/{analysisId} {
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);

      allow create: if isOwner(userId) && request.resource.data.studentId == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.studentId == resource.data.studentId;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Rule for the /users/{userId}/focusSessions/{sessionId} collection.
     * @path /users/{userId}/focusSessions/{sessionId}
     * @allow (create) - A user can create a focus session under their own profile.
     * @allow (get, list, update, delete) - A user can get, list, update, or delete their own focus sessions.
     * @deny (create) - A user cannot create a focus session under another user's profile.
     * @deny (get, list, update, delete) - A user cannot get, list, update, or delete another user's focus sessions.
     * @principle Enforces document ownership for all operations.
     */
    match /users/{userId}/focusSessions/{sessionId} {
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);

      allow create: if isOwner(userId) && request.resource.data.studentId == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.studentId == resource.data.studentId;
      allow delete: if isExistingOwner(userId);
    }

   /**
     * @description Rule for the /users/{userId}/studyTopics/{topicId} collection.
     * @path /users/{userId}/studyTopics/{topicId}
     * @allow (create) - A user can create a study topic under their own profile.
     * @allow (get, list, update, delete) - A user can get, list, update, or delete their own study topics.
     * @deny (create) - A user cannot create a study topic under another user's profile.
     * @deny (get, list, update, delete) - A user cannot get, list, update, or delete another user's study topics.
     * @principle Enforces document ownership for all operations.
     */
    match /users/{userId}/studyTopics/{topicId} {
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);

      allow create: if isOwner(userId) && request.resource.data.studentId == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.studentId == resource.data.studentId;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Rule for the /classes/{classId} collection.
     * @path /classes/{classId}
     * @allow (get, list) - Any signed-in user can read class information.
     * @deny (create, update, delete) - Only admins can create, update, or delete class information (not yet implemented).
     * @principle Restricts write access to admins (currently denies all writes).
     */
    match /classes/{classId} {
      allow get: if isSignedIn();
      allow list: if isSignedIn();

      allow create: if false;  // TODO: Implement admin role check
      allow update: if false;  // TODO: Implement admin role check
      allow delete: if false;  // TODO: Implement admin role check
    }

    /**
     * @description Rule for the /teachers/{teacherId} collection.
     * @path /teachers/{teacherId}
     * @allow (get) - Any signed-in user can read teacher information.
     * @deny (create, update, delete) - Only admins can create, update, or delete teacher profiles (not yet implemented).
     * @principle Restricts write access to admins (currently denies all writes).
     */
    match /teachers/{teacherId} {
      allow get: if isSignedIn();
      allow list: if false; // Listing all teachers is denied.

      allow create: if false; // TODO: Implement admin role check
      allow update: if false; // TODO: Implement admin role check
      allow delete: if false; // TODO: Implement admin role check
    }

    /**
     * @description Rule for the /users/{userId}/smartAlerts/{alertId} collection.
     * @path /users/{userId}/smartAlerts/{alertId}
     * @allow (create) - A user can create a smartAlert under their own profile.
     * @allow (get, list, update, delete) - A user can get, list, update, or delete their own smartAlerts.
     * @deny (create) - A user cannot create a smartAlert under another user's profile.
     * @deny (get, list, update, delete) - A user cannot get, list, update, or delete another user's smartAlerts.
     * @principle Enforces document ownership for all operations.
     */
    match /users/{userId}/smartAlerts/{alertId} {
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);

      allow create: if isOwner(userId) && request.resource.data.studentId == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.studentId == resource.data.studentId;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Rule for the /announcements/{announcementId} collection.
     * @path /announcements/{announcementId}
     * @allow (get, list) - All users can read announcements.
     * @deny (create, update, delete) - Only admins can create, update, or delete announcements (not yet implemented).
     * @principle Allows public read access, restricts write access to admins.
     */
    match /announcements/{announcementId} {
      allow get: if true;
      allow list: if true;

      allow create: if false; // TODO: Implement admin role check
      allow update: if false; // TODO: Implement admin role check
      allow delete: if false; // TODO: Implement admin role check
    }
  }
}