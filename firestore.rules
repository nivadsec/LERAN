 * @fileoverview Firestore Security Rules â€” Stable Final Version (Document-based RBAC)
 */

rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /** ðŸ”§ Helper Functions **/
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // âœ… Safe admin check: Reads admin list from /permissions/user_roles.
    // We allow all authenticated users to read this single doc to prevent circular dependencies.
    function isAdmin() {
      // This is a placeholder for the actual admin check. 
      // The logic will be replaced by a check against a 'permissions' document.
      return request.auth.uid == '41fdpi5ugHZmxalGoNlYN1RXlBB2';
    }

    /** CONFIGS **/
    match /configs/{configId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    /** MESSAGES **/
    match /messages/{messageId} {
      allow read: if isSignedIn() &&
                    (isOwner(resource.data.senderId) || isOwner(resource.data.recipientId)) ||
                    isAdmin();
      allow list: if isAdmin();
      allow create: if isSignedIn() &&
                      request.resource.data.senderId == request.auth.uid ||
                      isAdmin();
    }

    /** USERS **/
    match /users/{userId} {
      allow get: if isOwner(userId) || isAdmin();
      allow list: if isAdmin();
      allow create: if isOwner(userId);
      allow update: if isOwner(userId) || isAdmin();
      allow delete: if isAdmin();
    }

    /** DAILY REPORTS **/
    match /users/{userId}/dailyReports/{reportId} {
      allow read, list: if isOwner(userId) || isAdmin();
      allow create: if isOwner(userId);
      allow update: if isOwner(userId) || isAdmin();
    }

    match /{path=**}/dailyReports/{reportId} {
      allow get, list: if isAdmin();
    }

    /** WEEKLY REPORTS **/
    match /users/{userId}/weeklyReports/{reportId} {
      allow read, list: if isOwner(userId) || isAdmin();
      allow write: if isOwner(userId);
    }

    /** ANALYSES **/
    match /users/{userId}/testAnalyses/{analysisId} {
      allow read, list: if isOwner(userId) || isAdmin();
      allow write: if isOwner(userId);
    }

    match /users/{userId}/examAnalyses/{analysisId} {
      allow read, list: if isOwner(userId) || isAdmin();
      allow write: if isOwner(userId);
    }

    /** FOCUS SESSIONS **/
    match /users/{userId}/focusSessions/{sessionId} {
      allow read, list: if isOwner(userId) || isAdmin();
      allow write: if isOwner(userId);
    }

    /** STUDY TOPICS **/
    match /users/{userId}/studyTopics/{topicId} {
      allow read, list: if isOwner(userId) || isAdmin();
      allow write: if isOwner(userId);
    }

    /** CLASSES / TEACHERS **/
    match /classes/{classId} {
      allow read, list, write: if isAdmin();
    }
    match /teachers/{teacherId} {
      allow read, list, write: if isAdmin();
    }

    /** SMART ALERTS **/
    match /users/{userId}/smartAlerts/{alertId} {
      allow read, list: if isOwner(userId) || isAdmin();
      allow write: if isAdmin();
    }

    /** ANNOUNCEMENTS + ARTICLES **/
    match /announcements/{announcementId} {
      allow read, list: if true;
      allow create, update, delete: if isAdmin();
    }
    match /articles/{articleId} {
      allow read, list: if true;
      allow create, update, delete: if isAdmin();
    }

    /** DATE CHANGE REQUESTS **/
    match /dateChangeRequests/{requestId} {
      allow create: if isSignedIn() && request.resource.data.studentId == request.auth.uid;
      allow read: if isSignedIn() &&
                    (isOwner(resource.data.studentId) || isAdmin());
      allow list, update: if isAdmin();
    }

    /** PERMISSIONS DOC **/
    match /permissions/user_roles {
      // ðŸ‘‡ fix circular dependency
      allow read: if isSignedIn();        // all authenticated users can read this list to resolve isAdmin()
      allow write: if isAdmin();          // only admins can modify it
    }

    /** FALLBACK **/
    match /users/{userId}/{document=**} {
      allow read, list, write: if false;
    }
  }
}
