/**
 * @fileoverview Firestore Security Rules for the iTalk Academic platform.
 *
 * Core Philosophy:
 * This ruleset enforces a strict user-ownership model for student data,
 * allowing students to manage their own profiles, daily reports, and smart alerts.
 * Administrative roles are not defined, so teacher/admin functionality is not supported.
 *
 * Data Structure:
 * - /users/{userId}: Student profiles.
 * - /users/{userId}/dailyReports/{reportId}: Daily reports for each student.
 * - /users/{userId}/smartAlerts/{alertId}: Smart alerts for each student.
 * - /classes/{classId}: Class information (unprotected; read-only for everyone).
 * - /teachers/{teacherId}: Teacher profiles (unprotected; read-only for everyone).
 *
 * Key Security Decisions:
 * - Students can only access their own data (profiles, reports, alerts).
 * - Listing all users, reports, alerts, classes, or teachers is disallowed.
 * - The rules prioritize authorization independence, avoiding costly `get()` calls
 *   by relying on path-based ownership.
 * - Data schema is not validated beyond the minimum requirements for authorization
 *   (e.g., ensuring the studentId in a daily report matches the path).
 * - The rules do not define any global administrator roles or complex role-based
 *   access control.
 *
 * Denormalization for Authorization:
 * - The `studentId` field in the `DailyReport` and `SmartAlert` documents is
 *   essential for authorization. It is validated on creation to match the
 *   `userId` in the path.
 *
 * Structural Segregation:
 * - User-specific data (profiles, reports, alerts) is stored in user-scoped
 *   subcollections to simplify authorization and prevent accidental exposure
 *   of private information.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Allows students to read and write their own profile data.
     * @path /users/{userId}
     */
    match /users/{userId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(userId) {
        return isSignedIn() && request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
      }

      allow get: if isOwner(userId);
      allow list: if false; // Explicitly disallow listing all users.

      allow create: if isOwner(userId) && request.resource.data.id == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.id == userId;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Allows students to manage their own daily reports.
     * @path /users/{userId}/dailyReports/{reportId}
     */
    match /users/{userId}/dailyReports/{reportId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(userId) {
        return isSignedIn() && request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
      }

      allow get: if isOwner(userId);
      allow list: if false;

      allow create: if isOwner(userId) && request.resource.data.studentId == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.studentId == resource.data.studentId;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Allows anyone to read class information, but no one can create, update, or delete it.
     * @path /classes/{classId}
     */
    match /classes/{classId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Allows anyone to read teacher information, but no one can create, update, or delete it.
     * @path /teachers/{teacherId}
     */
    match /teachers/{teacherId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Allows students to manage their own smart alerts.
     * @path /users/{userId}/smartAlerts/{alertId}
     */
    match /users/{userId}/smartAlerts/{alertId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(userId) {
        return isSignedIn() && request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
      }

      allow get: if isOwner(userId);
      allow list: if false;

      allow create: if isOwner(userId) && request.resource.data.studentId == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.studentId == resource.data.studentId;
      allow delete: if isExistingOwner(userId);
    }
  }
}