/**
 * @fileoverview Firestore Security Rules â€” Final Optimized Version
 *
 * âœ… Core Principles:
 * - Strict user ownership model for student data.
 * - RBAC based on /permissions/user_roles document (list of admin UIDs).
 * - Prevents circular dependency when listing /users.
 * - Secure validation for every create/update operation.
 *
 * âœ… Data Schema:
 * - /users/{userId}
 * - /users/{userId}/subcollections/...
 * - /permissions/user_roles (contains array field "admins")
 * - /announcements, /articles â€” public content
 */

rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /** ðŸ”§ Helper Functions **/
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isAdmin() {
      return isSignedIn() &&
        request.auth.uid in get(/databases/$(database)/documents/permissions/user_roles).data.admins;
    }

    /** =========================
     * CONFIGS
     ========================== */
    match /configs/{configId} {
      allow read: if isSignedIn();     // Any signed-in user can read app configs.
      allow write: if isAdmin();       // Only admins can modify.
    }

    /** =========================
     * MESSAGES
     ========================== */
    match /messages/{messageId} {
      allow read: if isSignedIn() &&
                    (isOwner(resource.data.senderId) || isOwner(resource.data.recipientId)) ||
                    isAdmin();
      allow list: if isAdmin();
      allow create: if isSignedIn() &&
                      request.resource.data.senderId == request.auth.uid ||
                      isAdmin();
    }

    /** =========================
     * USERS
     ========================== */
    match /users/{userId} {
      allow get: if isOwner(userId) || isAdmin();
      allow list: if isAdmin();
      allow create: if isOwner(userId) &&
                      request.resource.data.userId == request.auth.uid; // data integrity check
      allow update: if isOwner(userId) || isAdmin();
      allow delete: if isAdmin();
    }

    /** =========================
     * DAILY REPORTS
     ========================== */
    match /users/{userId}/dailyReports/{reportId} {
      allow read, list: if isOwner(userId) || isAdmin();
      allow create: if isOwner(userId);
      allow update: if isOwner(userId) || isAdmin();
    }

    match /{path=**}/dailyReports/{reportId} {
      allow get, list: if isAdmin();  // Admin dashboard queries (group collection).
    }

    /** =========================
     * WEEKLY REPORTS
     ========================== */
    match /users/{userId}/weeklyReports/{reportId} {
      allow read, list: if isOwner(userId) || isAdmin();
      allow write: if isOwner(userId);
    }

    /** =========================
     * ANALYSES (TEST & EXAM)
     ========================== */
    match /users/{userId}/testAnalyses/{analysisId} {
      allow read, list: if isOwner(userId) || isAdmin();
      allow write: if isOwner(userId);
    }

    match /users/{userId}/examAnalyses/{analysisId} {
      allow read, list: if isOwner(userId) || isAdmin();
      allow write: if isOwner(userId);
    }

    /** =========================
     * FOCUS SESSIONS
     ========================== */
    match /users/{userId}/focusSessions/{sessionId} {
      allow read, list: if isOwner(userId) || isAdmin();
      allow write: if isOwner(userId);
    }

    /** =========================
     * STUDY TOPICS
     ========================== */
    match /users/{userId}/studyTopics/{topicId} {
      allow read, list: if isOwner(userId) || isAdmin();
      allow write: if isOwner(userId);
    }

    /** =========================
     * CLASSES (placeholder)
     ========================== */
    match /classes/{classId} {
      allow read, list, write: if isAdmin();
    }

    /** =========================
     * TEACHERS (placeholder)
     ========================== */
    match /teachers/{teacherId} {
      allow read, list, write: if isAdmin();
    }

    /** =========================
     * SMART ALERTS
     ========================== */
    match /users/{userId}/smartAlerts/{alertId} {
      allow read, list: if isOwner(userId) || isAdmin();
      allow write: if isAdmin(); // Created by backend/admin only.
    }

    /** =========================
     * ANNOUNCEMENTS (public)
     ========================== */
    match /announcements/{announcementId} {
      allow read, list: if true;
      allow create, update, delete: if isAdmin();
    }

    /** =========================
     * ARTICLES (public)
     ========================== */
    match /articles/{articleId} {
      allow read, list: if true;
      allow create, update, delete: if isAdmin();
    }

    /** =========================
     * DATE CHANGE REQUESTS
     ========================== */
    match /dateChangeRequests/{requestId} {
      allow create: if isSignedIn() && request.resource.data.studentId == request.auth.uid;
      allow read: if isSignedIn() &&
                    (isOwner(resource.data.studentId) || isAdmin());
      allow list, update: if isAdmin();
    }

    /** =========================
     * PERMISSIONS DOCUMENT
     * Admin role assignments list
     ========================== */
    match /permissions/user_roles {
      allow read: if isAdmin();  // Admin can read admin list
      allow write: if isAdmin(); // Admin can manage admin list
    }

    /** =========================
     * FALLBACK RULE
     * Prevent unexpected paths access.
     ========================== */
    match /users/{userId}/{document=**} {
      allow read, list, write: if false; // full deny fallback (for future subcollections)
    }
  }
}
